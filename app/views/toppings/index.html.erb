<div class="container">
  <div class="jumbotron">
<p id="notice"><%= notice %></p>

<h1>Listing Toppings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toppings.each do |topping| %>
      <tr>
        <td><%= topping.name %></td>
        <td><%= link_to 'Show', topping, :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_topping_path(topping), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', topping, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topping', new_topping_path, :class => 'btn btn-primary' %>
</div>
</div>