<div class="container">
  <div class="jumbotron">
<p id="notice"><%= notice %></p>

<h1>Listing Doe Kinds</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doe_kinds.each do |doe_kind| %>
      <tr>
        <td><%= doe_kind.name %></td>
        <td><%= link_to 'Show', doe_kind, :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_doe_kind_path(doe_kind), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', doe_kind, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doe kind', new_doe_kind_path, :class => 'btn btn-primary' %>
</div>
</div>