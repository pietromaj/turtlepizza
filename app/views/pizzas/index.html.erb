<div class="container">
<p id="notice"><%= notice %></p>


<h1>Listing Pizzas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Doe kind</th>
      <th>Toppings</th>
      <th>Pictures:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= DoeKind.find(pizza.doe_kind_id).name %></td>
        <td><% pizza.toppings.limit(3).each do |topping| %>
               <%= topping.name %><br>
            <% end %>
        </td>
        <td>
         <% pizza.images.limit(1).each do |image| %>
            <%= image_tag image.picture.url if image.picture? %>
            <br>
         <% end %>
       </td>
        <td><%= link_to 'Show', pizza, :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_pizza_path(pizza), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pizza', new_pizza_path, :class => 'btn btn-primary' %>
</div>